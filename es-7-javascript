<!DOCTYPE html>
    <html lang="it">
    <head>
         <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, inital-scale=1,0">
        <title>Esempio di ciclo semplice</title>
    </head>
    <body>
        <h1>Numeri da 1 a 10</h1>
        <ul id="listaNumeri"></ul>

        <script>
            //Selezioniamo l'elemento ul
            var listaNumeri=document.getElementById("listaNumeri");

            //cicl per visualizzare numeri da 1 a 10
            for(var i=1;i<=10;i++){
                //creiamo un nuovo elementi li
                var listItem=document.createElement("li");
                //impostiamo il testo dell'elemento li
                listItem.textContent="Numero"+i;
                //Aggiungiamo l'elemento li alla lista ul
                listaNumeri.appendChild(listItem);
            }
        </script>
    </body>
</html>
